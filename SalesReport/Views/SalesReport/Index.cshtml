@model List<SalesReport.Models.ViewModels.SalesReportViewModel>
@{
    ViewData["Title"] = "Sales Report";
    string[] monthNames = { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };
}
<div class="wrapper">
    <div class="content1">
        <div class="container text-center">
            <div class="row row-cols-2">
                <div class="col">
                    <div class="card m-3">
                        <div class="card-header align-items-center text-center">
                            <h5 class="mb-0">Top Sales of Last 3 months</h5>
                        </div>
                        <div class="px-4">
                            <div id="chart-bar-topsales" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card m-3" style="min-width:600px">
                        <div class="card-header align-items-center text-center">
                            <h5 class="mb-0">Top 10 Best seller products</h5>
                        </div>
                        <div class="px-4">
                            <div id="chart-pie-products" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card m-3">
                        <div class="card-header align-items-center text-center">
                            <h5 class="mb-0">Totals Sales For the Year</h5>
                        </div>
                        <div class="px-4">
                            <div id="line-chart-sales" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header align-items-center">
                            <h5 class="mb-0">Top 5 Sales People of the Month</h5>
                        </div>
                        <div class="px-4">
                            <div id="chart-bar-sales" style="min-height: 315px; width:auto">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content2">
        <div class="dropdown text-center">
            <a class="btn btn-secondary"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Select Month
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @for (int i = 0; i < monthNames.Length; i++)
                {
                    int monthNumber = i + 1;
                    <a class="dropdown-item" href="#" onclick="slectedMonth(@monthNumber)">@monthNames[i]</a>
                }
            </div>
        </div>
        <div class="table-container">
            <table class="table-content table table-hover" id="myTable">
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>