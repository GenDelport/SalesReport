@model List<SalesReport.Models.ViewModels.SalesReportViewModel>
@{
    ViewData["Title"] = "Sales Report";
    string[] monthNames = { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };
}
<div class="wrapper">
    <div class="content1">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6 col-sm-4">
                    <div class="card m-3" id="card1">
                        <div class="card-header align-items-center text-center">
                            <div class="row">
                                <div class="col">
                                    <h5 class="mb-0">Top Sales for Last 3 Months</h5>
                                </div>
                                <div class="col">
                                    <button data-bs-toggle="tooltip" data-bs-placement="top"
                                            data-bs-custom-class="custom-tooltip"
                                            data-bs-title="Hide/Show Data." id="toggle-btn" type="button" class="btn btn-sm btn-danger ml-auto hide-btn1">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card1 px-4">
                            <div id="chart-bar-topsales" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-4">
                    <div class="card m-3" id="card2">
                        <div class="card-header align-items-center text-center">
                            <div class="row">
                                <div class="col">
                                    <h5 class="mb-0">Best seller products</h5>
                                </div>
                                <div class="col">
                                    <button data-bs-toggle="tooltip" data-bs-placement="top"
                                            data-bs-custom-class="custom-tooltip"
                                            data-bs-title="Hide/Show Data." id="toggle-btn" type="button" class="btn btn-sm btn-danger ml-auto hide-btn2">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card2 px-4">
                            <div id="chart-pie-products" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-4">
                    <div class="card m-3" id="card3">
                        <div class="card-header align-items-center text-center">
                            <div class="row">
                                <div class="col">
                                    <h5 class="mb-0">Total Sales For the Year</h5>
                                </div>
                                <div class="col">
                                    <button data-bs-toggle="tooltip" data-bs-placement="top"
                                            data-bs-custom-class="custom-tooltip"
                                            data-bs-title="Hide/Show Data." id="toggle-btn" type="button" class="btn btn-sm btn-danger ml-auto hide-btn3">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card3 px-4">
                            <div id="line-chart-sales" style="min-height: 315px;width:auto">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-4">
                    <div class="card">
                        <div class="card-header align-items-center">
                            <div class="row">
                                <div class="col">
                                    <h5 class="mb-0">Top 5 Sales People of the Month</h5>
                                </div>
                                <div class="col">
                                    <button data-bs-toggle="tooltip" data-bs-placement="top"
                                            data-bs-custom-class="custom-tooltip"
                                            data-bs-title="Hide/Show Data." id="toggle-btn" type="button" class="btn btn-sm btn-danger ml-auto hide-btn4">
                                        <i class="bi bi-eye-fill"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card4 px-4">
                            <div id="chart-bar-sales" style="min-height: 315px; width:auto">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content2">
        <div class="dropdown text-center">
            <a class="btn btn-secondary" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Select Month
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                @for (int i = 0; i < monthNames.Length; i++)
                {
                    int monthNumber = i + 1;
                    <a class="dropdown-item" href="#" onclick="slectedMonth(@monthNumber)">@monthNames[i]</a>
                }
            </div>
        </div>
        <div class="table-container">
            <table class="table-content table table-hover" id="myTable">
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>